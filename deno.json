{
    "test": {
        "files": { "exclude": ["node_modules", "test/test.mjs", "dist"] }
    },
    "importMap": "import_map.json",
    "tasks": {
        "udd": " deno run -A https://deno.land/x/udd@0.8.2/main.ts '*/*.ts' '*.ts' '*.json'",
        "test": "deno test -A --unstable --trace-ops"
    },
    "lint": {
        "files": {
            "exclude": ["node_modules", "dist"]
        },
        "rules": {
            "exclude": ["no-explicit-any", "ban-types", "require-await"]
        }
    },
    "fmt": {
        "files": {
            "exclude": ["node_modules", "dist"]
        },
        "options": {
            "indentWidth": 4,
            "singleQuote": false
        }
    }
}
