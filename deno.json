{
    "importMap": "import_map.json",
    "tasks": {
        "udd": " deno run -A https://deno.land/x/udd/main.ts '*/*.ts' '*.ts' '*.json'",
        "test": "deno test -A --unstable --trace-ops"
    },
    "lint": {
        "rules": { "exclude": ["no-explicit-any", "ban-types"] }
    },
    "fmt": {
        "files": {
            "exclude": [
                "node_modules"
            ]
        },
        "options": {
            "indentWidth": 4,
            "singleQuote": false
        }
    }
}
